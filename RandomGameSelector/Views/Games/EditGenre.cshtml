@model RandomGameSelector.Models.Genre

@{
    ViewData["Title"] = "Edit - " + Model.Name;
}

<h1>Edit @Model.Name</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditGenre">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <br />
            <div style="display:flex">
                <div class="form-group" style="flex: 1">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
                <div style="flex: 1">
                    <a asp-action="GenresListPage"class="btn btn-primary">Back to List</a>
                </div>
            </div>           
        </form>
        <br />
        <form asp-action="DeleteGenre" >
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="DeleteGenre" class="btn btn-danger" />
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
