@model IEnumerable<RandomGameSelector.Models.Genre>

@{
    ViewData["Title"] = "GenresListPage";
}

<h1>Genres</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td style="text-align:end">
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
            </td>
        </tr>
}
    </tbody>
</table>

<p>
    <a asp-action="CreateGenre">Add Genre</a>
</p>
